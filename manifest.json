{
  "manifest_version": 3,
  "name": "YouTube Commenter Info",
  "version": "1.7.0",
  "description": "Displays /about information and more below the handles of YouTube comments.",
  "author": "Nhân Trí",
  "homepage_url": "https://github.com/nhantrichuyenanh/YouTube-Commenter-Info",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://www.youtube.com/watch?*",
    "https://www.youtube.com/shorts/*",
    "https://www.youtube.com/channel/*/community?*"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "128": "icon.png",
    "256": "icon.png"
  },
  "permissions": ["storage"],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{a271ed8b-79b5-4c55-88d4-7ddeb399fb26}",
      "strict_min_version": "109.0"
    }
  }
}